{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["react", "react-dom", "node", "chrome"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
